                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/center_avatar"
                    app:civ_fill_color="@color/white"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    app:layout_collapseMode="parallax"
                    android:layout_gravity="center"
                    app:layout_collapseParallaxMultiplier="0.7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_avatar"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/titlebar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:layout_collapseMode="pin"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <!--用户名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/accountText"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Username"
                        android:textColor="@color/green"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/center_account"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:background="@color/transparent"
                        android:text="914077749@qq.com"
                        android:textColor="@color/grey"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <!--昵称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Nickname"
                        android:textColor="@color/green"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/center_nickname_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:background="@color/transparent"
                        android:text="@string/modify_hint"
                        android:textColor="@color/grey"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <!--密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/passwordText"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Password"
                        android:textColor="@color/green"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/center_pwd_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center_vertical|end"
                        android:text="@string/modify_hint"
                        android:textColor="@color/grey"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <!--生日-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/birthText"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Birth"
                        android:textColor="@color/green"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/center_birth_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:background="@color/transparent"
                        android:text="@string/modify_hint"
                        android:textColor="@color/grey"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <!--身高-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/heightText"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/Height"
                        android:textColor="@color/green"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/center_height_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:background="@color/transparent"
                        android:text="@string/modify_hint"
                        android:textColor="@color/grey"
                        android:textSize="18sp" />
                </LinearLayout>

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <!--检测历史-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <Button
                        android:id="@+id/center_history_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="@color/transparent"
                        android:text="@string/checkHistory"
                        android:textColor="@color/green"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <!--退出登录-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <Button
                        android:id="@+id/center_exit_btn"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:text="@string/Logout"
                        android:textColor="@color/green"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!--分割线-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
